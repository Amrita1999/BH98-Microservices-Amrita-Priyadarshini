package com.collection;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date; //zone wise date (sql.date = universal date e.g bday)

public class CreditCard {
	private String card_number;
	private Date expire_date;
	
	public CreditCard(String card_number, String expire_date) {
		SimpleDateFormat format = new SimpleDateFormat("dd-MM-yyyy");
		Date d1 = null; // if exception occuring during parsing date format the it will store null value
		try {
			d1 = format.parse(expire_date);
		} catch (ParseException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		this.card_number = card_number;
		this.expire_date = d1;
	}
	
	public String getCard_number() {
		return card_number;
	}
	public void setCard_number(String card_number) {
		this.card_number = card_number;
	}
	public Date getExpire_date() {
		return expire_date;
	}
	public void setExpire_date(Date expire_date) {
		this.expire_date = expire_date;
	}

	@Override
	public String toString() {
		return "CreditCard [card_number=" + card_number + ", expire_date=" + expire_date + "]";
	}
	
	
	

}
